<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000">

    <EditText
        android:id="@+id/registerPassword1"
        style="@style/register_edit_style"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:focusable="false"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/registerNick"
        style="@style/register_edit_style"
        android:layout_above="@+id/registerPassword1"
        android:hint="请输入邮箱/手机号">

    </EditText>

    <EditText
        android:id="@+id/registerUserName"
        style="@style/register_edit_style"
        android:layout_above="@+id/registerNick"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:hint="请输入昵称" />

    <EditText
        android:id="@+id/registerPassword2"
        style="@style/register_edit_style"
        android:layout_below="@+id/registerPassword1"
        android:layout_centerHorizontal="true"
        android:hint="请再次输入密码"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/registerBtn"
        android:layout_marginTop="10dp"
        style="@style/register_button_style"
        android:layout_below="@+id/registerPassword2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
