<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/tr_black">

            <ImageView
                android:id="@+id/drawerSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_drawer" />

            <TextView
                android:id="@+id/titleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/title1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/mainPagerSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/icon_search" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/showLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/titleLayout"></FrameLayout>

        <LinearLayout
            android:id="@+id/tabSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/slider_bg2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab1"
                style="@style/tabLayout">

                <ImageView
                    android:id="@+id/img1"
                    style="@style/titleImage"
                    android:src="@drawable/icon_main1"></ImageView>

                <TextView
                    android:id="@+id/title1"
                    style="@style/titleText"
                    android:text="@string/title1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2"
                style="@style/tabLayout">

                <ImageView
                    android:id="@+id/img2"
                    style="@style/titleImage"

                    android:src="@drawable/icon_loop1"></ImageView>

                <TextView
                    android:id="@+id/title2"
                    style="@style/titleText"
                    android:text="@string/title2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sendNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12.5dp"
                android:src="@drawable/icon_edit2" />

            <LinearLayout
                android:id="@+id/tab3"
                style="@style/tabLayout">

                <ImageView
                    android:id="@+id/img3"
                    style="@style/titleImage"

                    android:src="@drawable/icon_suiuu1"></ImageView>

                <TextView
                    android:id="@+id/title3"
                    style="@style/titleText"
                    android:text="@string/title3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab4"
                style="@style/tabLayout">

                <ImageView
                    android:id="@+id/img4"
                    style="@style/titleImage"
                    android:src="@drawable/icon_conversation1"></ImageView>

                <TextView
                    android:id="@+id/title4"
                    style="@style/titleText"
                    android:text="@string/title4" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slideLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/headLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/headImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/nickName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/nickname"
                android:textSize="20sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headLayout">

        </ListView>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>