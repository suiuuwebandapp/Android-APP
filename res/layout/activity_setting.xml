<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingRootLayout"
    tools:context="com.minglang.suiuu.activity.SettingActivity">


    <include
        android:id="@+id/top_bar"
        layout="@layout/common_top2_layout"
        />

    <ListView
        android:id="@+id/settingList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar" />
    <LinearLayout
        android:layout_alignBottom="@+id/settingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_20dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_style_alert_dialog_special"
            android:text="@string/button_logout"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
