        <activity
            android:name="com.minglang.suiuu.chat.activity.ChatActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/horizontal_slide"
            android:windowSoftInputMode="adjustResize"></activity>
        <!-- 自定义的alertdialog -->
        <activity
            android:name="com.minglang.suiuu.chat.activity.AlertDialog"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogStyle"></activity>
        <!-- 地图 -->
        <activity
            android:name="com.minglang.suiuu.chat.activity.BaiduMapActivity"
            android:screenOrientation="portrait"
            android:theme="@style/horizontal_slide"></activity>
        <!-- choose video -->
        <activity
            android:name="com.minglang.suiuu.chat.activity.ImageGridActivity"
            android:screenOrientation="portrait"
            android:theme="@style/horizontal_slide"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <!-- 语音通话 -->
        <activity
            android:name="com.minglang.suiuu.chat.activity.VoiceCallActivity"
            android:screenOrientation="portrait"
            android:theme="@style/nornal_style"></activity>
